package Homework2;

public class Employee {
	private String name;
	public Task currentTask;
	private int hoursLeft;
	
	Employee(final String name, final int hours){
		setEmployeeName(name);
		setHoursLeft(hours);
	}
	
	void setEmployeeName(final String name){
		if(name!=null){
			this.name = name;
		}
		else{
			System.out.println("You must enter a name of the employee");
		}
	}
	
	String getEmployeeName(){
		return this.name;
	}
	
	void setHoursLeft(final int hours){
		if(hours>=0){
			this.hoursLeft = hours;
		}
		else{
			System.out.println("Invalid value for hours");
		}
	}
	
	
	
	void work(){
		if(this.currentTask == null){
			System.out.println("The employee "+this.name+" don't have current task");
		}
		else{
			if(this.hoursLeft < currentTask.getWorkingHours()){
				currentTask.setWorkingHours(currentTask.getWorkingHours() - this.hoursLeft);
				setHoursLeft(0);
				
			}
			else if(this.hoursLeft > currentTask.getWorkingHours()){
				setHoursLeft(this.hoursLeft - currentTask.getWorkingHours());
				currentTask.setWorkingHours(0);
			}
			else{
				currentTask.setWorkingHours(0);
				setHoursLeft(0);
			}
		}
	}
	
	void showReport(){
		System.out.println("Name: "+this.name);
		System.out.println("Task: "+currentTask.getTaskName());
		System.out.println("Left hours of employee: "+this.hoursLeft);
		System.out.println("Left hours of current task: "+currentTask.getWorkingHours());
		System.out.println("----------------------");
	}
}
